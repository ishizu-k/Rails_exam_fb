<%= form_with(model: @record, local: true, url: choose_new_or_edit) do |form| %>
<% if @record.errors.any? %>
  <div id="error_explanation">
    <h2><%= @record.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @record.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="record">
    <%= form.label :内容 %>
    <%= form.text_field :content %>
  </div>
  <div class="record">
    <%= form.label :画像 %>
    <%= image_tag(@record.image.url) if @record.image && @record.image.url %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>
  <%= form.submit "確認する"%>
<% end %>

<%= link_to '戻る', records_path %>
