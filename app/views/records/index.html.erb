<h2>投稿一覧</h2>

<table>
  <tr>
    <th>内容</th>
    <th>画像</th>
    <th>投稿者</th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.content %></td>
    <td><%= image_tag record.image %></td>
    <td><%= record.user.name %></td>
    <td><%= link_to "編集", edit_record_path(record.id) %></td>
    <td><%= link_to '削除', record_path(record.id), method: :delete, data: {confirm: '削除を実行しますか？'} %></td>
  </tr>
<% end %>
</table>

<%= link_to '新規投稿', new_record_path %>
