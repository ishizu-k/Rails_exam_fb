<h2>アカウント登録</h2>

<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :名前 %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :メールアドレス %>
  <%= f.email_field :email %>
  <br>
  <%= f.label :パスワード %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :パスワードの確認 %>
  <%= f.password_field :password_confirmation %>
  <br>
  <br>
  <%= f.submit "Create my account" %>
<% end %>

